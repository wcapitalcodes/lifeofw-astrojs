    <!-- FAQ Section -->
    <div class="max-w-3xl mx-auto">
      <h3 class="text-2xl font-bold text-center mb-8">Frequently Asked Questions</h3>
      <div class="space-y-4">
        {faqs.map(faq => (
          <div class="bg-white rounded-lg shadow-sm">
            <details class="group">
              <summary class="flex justify-between items-center p-4 cursor-pointer">
                <h5 class="font-medium text-gray-900">{faq.question}</h5>
                <svg class="w-5 h-5 text-gray-500 group-open:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
