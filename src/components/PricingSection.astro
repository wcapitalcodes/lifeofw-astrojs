---
interface Feature {
  category: string;
  items: {
    title: string;
    free: boolean | string;
    pro: boolean | string;
  }[];
}

const features: Feature[] = [
  {
    category: "Asset & Liability Management",
    items: [
      { title: "Track up to 9 asset categories", free: true, pro: true },
      { title: "Track up to 5 liability types", free: true, pro: true },
      { title: "Custom categories", free: false, pro: true }
    ]
  },
  {
    category: "Financial Planning Tools",
    items: [
      { title: "Basic financial calculators", free: true, pro: true },
      { title: "Advanced planning tools", free: false, pro: true },
      { title: "Custom financial templates", free: "Limited", pro: true }
    ]
  },
  {
    category: "Support",
    items: [
      { title: "Knowledge base access", free: true, pro: true },
      { title: "Community support", free: true, pro: true },
      { title: "Priority support", free: "Basic", pro: "24/7 Priority" }
    ]
  }
];

const faqs = [
  {
    question: "Do you offer free trial?",
    answer: "Absolutely! We want you to experience the security and convenience of WVault firsthand. Sign up for a 14 days free trial and explore all its features before committing to a paid plan."
  },
  {
    question: "What happens after the free trial ends?",
    answer: "At the end of your free trial, you'll be prompted to choose a paid subscription plan to continue using WVault. If you don't choose a plan, your access will be restricted."
  },
  {
    question: "What happens upon cancellation, refund or default in payment?",
    answer: "Please contact Wahine Capital immediately upon occurrence of any of these events. We have a grace period of 30 days within which you can save your information (albeit not in the format provided in W Vault). After 30 days, the information and your account will be deleted."
  },
  {
    question: "Can I switch between monthly and annual plans?",
    answer: "You can easily upgrade or downgrade your subscription plan at any time. But to do so, please email Wahine Capital at hellowahine@wcapital.asia. If you upgrade mid-cycle, your initial plan subscription will remain the same until the end of the month and the new plan will change the subsequent month. If you downgrade, you'll enjoy the remainder of your current billing cycle before the new plan takes effect."
  }
];
---

<section class="py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-medium text-gray-900 font-serif">The right price for you, whoever you are</h2>
    </div>

    <!-- Pricing Cards -->
    <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto mb-16">
      <!-- Free Plan -->
      <div class="bg-white rounded-2xl shadow-sm p-8 border border-primary-200">
        <div class="mb-6">
          <h3 class="text-xl font-semibold mb-2">W Vault Monthly</h3>
          <p class="text-gray-600">Start organizing your finances</p>
          
          <div class="mt-4">
            <span class="text-4xl font-bold">RM 19.90</span>
            <span class="text-gray-500">/ per month</span>
          </div>
        </div>
        
        <a href="#" class="block w-full py-3 px-4 rounded-full bg-gray-100 text-center text-gray-800 font-medium hover:bg-gray-200 transition-colors">
          Try free for 14 days
        </a>
      </div>

      <!-- Pro Plan -->
      <div class="bg-white rounded-2xl shadow-sm p-8 relative border border-accent-200">
        <div class="absolute top-4 right-4">
          <span class="bg-accent-100 text-accent-800 text-xs font-medium px-3 py-1 rounded-full">
            Popular
          </span>
        </div>

        <div class="mb-6">
          <h3 class="text-xl font-semibold mb-2">W Vault Annual</h3>
          <p class="text-gray-600">Complete financial management</p>
          
          <div class="mt-4">
            <span class="text-4xl font-bold">RM 199.00</span>
            <span class="text-gray-500">/ per year</span>
          </div>
        </div>

        <a href="#" class="block w-full py-3 px-4 rounded-full bg-accent-600 text-center text-white font-medium hover:bg-accent-700 transition-colors mb-3">
          Subscribe
        </a>
        <p class="text-sm text-gray-500 text-center">Try free for 14 days</p>
      </div>
    </div>

