---
import { Icon } from 'astro-icon/components';

interface Props {
  name?: string;
  avatarUrl?: string;
  description?: string;
}

const { name, avatarUrl, description } = Astro.props;
---

<li class="hover:cursor-pointer">
  <div class="flex flex-col items-center space-y-4 md:flex-row md:space-y-0 md:space-x-6">
    <div class="rounded-full bg-gradient-to-r from-primary-500 via-athens-gray-500 to-accent-500 p-1">
      <img
        class="h-24 w-24 rounded-full bg-gray-100"
        src={avatarUrl}
        alt={`${name}'s profile photo`}
        onclick={`openModal({name: '${name.replace(/'/g, "\\'")}', avatar_url: '${avatarUrl}', description: '${description.replace(/'/g, "\\'")}'})`}
      />
    </div>
    <div class="text-center md:text-left">
      <h3 class="text-base font-semibold leading-7 tracking-tight text-gray-900">
        {name}
      </h3>
      <a
        onclick={`openModal({name: '${name.replace(/'/g, "\\'")}', avatar_url: '${avatarUrl}', description: '${description.replace(/'/g, "\\'")}'})`}
        class="flex items-center justify-center md:justify-start space-x-2 underline text-primary-700 font-semibold"
      >
        <Icon name="lucide:phone" class="w-4 mr-2" />
        <span>Get in touch</span>
      </a>
    </div>
  </div>
</li>


