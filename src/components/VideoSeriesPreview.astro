---
import { Icon } from 'astro-icon/components'

const {
  title = "Explore our Video Series on\nPersonal Finance in Outclass",
  buttonText = "Preview",
  imagePath = "/images/sherry-video.jpeg",
  imageAlt = "Financial Awareness Preview"
} = Astro.props;
---

<div class="mx-auto max-w-5xl mb-16 relative w-full lg:h-[400px]">
  {/* Background Image */}
  <div class="absolute inset-0">
    <img
      src={imagePath}
      alt={imageAlt}
      class="absolute inset-0 w-full h-full object-cover brightness-75"
    />
  </div>

  {/* Content */}
  <div class="relative h-full">
    <div class="absolute inset-0 flex items-center p-16">
      <div class="container mx-auto px-6">
        <div class="max-w-3xl">
          <h1 class="text-3xl font-serif text-white mb-8 leading-tight">
            {title.split('\n').map((line, i) => (
              i === 0 ? line : <><br />{line}</>
            ))}
          </h1>
          <button class="bg-lime-300 text-teal-900 px-8 py-3 rounded text-md font-medium hover:bg-lime-400 transition-colors">
            {buttonText}
          </button>
        </div>
      </div>
    </div>

    {/* Play Button */}
    <div class="absolute right-8 bottom-1/3 md:right-48">
      <button
        class="w-16 h-16 bg-white rounded-full flex items-center justify-center hover:bg-gray-100 transition-colors"
        aria-label="Play video"
      >
        <Icon 
          name="lucide:play" 
          class="w-8 h-8 text-teal-900 ml-1"
        />
      </button>
    </div>
  </div>
</div>