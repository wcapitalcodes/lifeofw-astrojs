---
import type { PartnerGrid as Props } from '~/types';
import { twMerge } from 'tailwind-merge';

const { items = [], classes = {} } = Astro.props;

const { title: titleClass = '' } = classes;
---
<div class="mx-auto gap-8 md:gap-y-12">
{
  items && (
    <div class="">
      {items.map(({ title, logos, classes: itemClasses = {} }) => (
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-3 my-2 items-center w-full">
            <div class="">
              {title && <h3 class={twMerge('text-xl font-medium', titleClass, itemClasses?.title)}>{title}</h3>}
            </div>
            <div class="flex flex-row space-x-4">
              {logos?.map(({url,classes}) => (
                <img src={url} alt="" class={classes}/>
              ))}
            </div>
          </div>
      ))}
    </div>
  )
}
</div>