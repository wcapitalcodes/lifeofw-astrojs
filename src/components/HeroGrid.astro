  { id: 4, alt: "Community Group - Women's financial community gathering" },
  { id: 5, alt: 'Cafe Meet - Casual financial discussion meetup' },
  { id: 6, alt: 'Casual Meeting - Women networking event' },
  { id: 7, alt: 'Panel Discussion - Financial experts sharing insights' },
  { id: 8, alt: 'Group Photo - Community members gathering' },
  { id: 9, alt: 'Cafe Meeting - Financial planning session' },
  { id: 10, alt: 'DTX Event - Digital transformation in finance' },
  { id: 11, alt: 'Key Takeaways - Financial workshop highlights' },
  { id: 12, alt: 'DTX Banner - Digital finance exhibition' },
  { id: 13, alt: 'Hospice Visit - Community outreach program' },
