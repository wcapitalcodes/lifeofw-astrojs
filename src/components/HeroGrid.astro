  { id: 18, alt: 'Community Workshop - Group learning session' },
  { id: 19, alt: 'Expert Panel - Industry leaders discussion' },
  { id: 20, alt: 'Team Meeting - Strategic planning session' },
  { id: 21, alt: 'Awards Ceremony - Recognition event' },
  { id: 22, alt: 'Awards Ceremony - Recognition event' },
];

// Shuffle the images array randomly
const shuffledImages = images.sort(() => Math.random() - 0.5);

const duration = 60; // Duration in seconds
---

<div class="relative overflow-hidden w-full">
  <div class="flex gap-4 py-4">
    <div class="flex gap-4 animate-scroll" style={`--duration: ${duration}s`}>
      <!-- First set of shuffled images -->
      {
        shuffledImages.map((image) => (
          <div class="flex-none">
            <img
              src={`/images/hero-grid/${image.id}.jpeg`}
              alt={image.alt}
              class="w-48 h-48 sm:w-56 sm:h-56 md:w-64 md:h-64 lg:w-72 lg:h-72 object-cover rounded-lg shadow-md transition-all duration-300 hover:scale-105 hover:shadow-xl"
              loading="lazy"
            />
          </div>
        ))
      }

      <!-- Second set of shuffled images for seamless loop -->
      {
        shuffledImages.map((image) => (
          <div class="flex-none">
            <img
              src={`/images/hero-grid/${image.id}.jpeg`}
              alt={image.alt}
              class="w-48 h-48 sm:w-56 sm:h-56 md:w-64 md:h-64 lg:w-72 lg:h-72 object-cover rounded-lg shadow-md transition-all duration-300 hover:scale-105 hover:shadow-xl"
              loading="lazy"
            />
          </div>
        ))
      }
    </div>
  </div>
</div>

<style>
  .animate-scroll {
    animation: scroll var(--duration) linear infinite;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-100% - 16px)); /* Adjust based on gap size */
    }
  }
</style>