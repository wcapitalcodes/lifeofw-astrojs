---
const { benefits } = Astro.props;
---

<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    {
      benefits.map((benefit) => (
        <div class="bg-white rounded-2xl p-8 shadow-sm hover:shadow-md transition-shadow">
          <h3 class="text-2xl font-bold text-gray-900 mb-2">{benefit.title}</h3>
          <p class="text-gray-500 mb-6">{benefit.description}</p>
          <div class="h-48">
            {benefit.visualType === 'customLayout' && (
              <div class="flex gap-4">
                <div class="w-16 h-16 border border-blue-200 rounded-lg flex items-center justify-center">
                  <div class="w-8 h-8 bg-blue-500 rounded-full" />
                </div>
                <div class="w-24 h-16 border border-blue-200 rounded-lg flex items-center justify-center">
                  <div class="w-12 h-12 bg-blue-500 rounded-full" />
                </div>
                <div class="grid grid-cols-2 gap-2 w-16 h-16 border border-blue-200 rounded-lg p-2">
                  <div class="w-4 h-4 bg-blue-500 rounded-full" />
                  <div class="w-4 h-4 bg-gray-200 rounded-full" />
                  <div class="w-4 h-4 bg-gray-200 rounded-full" />
                  <div class="w-4 h-4 bg-gray-200 rounded-full" />
                </div>
              </div>
            )}

            {benefit.visualType === 'platformAgnostic' && (
              <div class="flex gap-4">
                <div class="flex-1 h-48 bg-gray-50 rounded-lg p-4">
                  <div class="w-16 h-6 bg-red-500 rounded-full mb-4 flex items-center justify-center">
                    <span class="text-white text-xs">LIVE</span>
                  </div>
                  <div class="w-full h-32 bg-gray-100 rounded-lg" />
                </div>
                <div class="w-16 h-48 bg-gray-50 rounded-lg" />
              </div>
            )}

            {benefit.visualType === 'multiPlatform' && (
              <div class="relative">
                <div class="flex gap-2 mb-4">
                  <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                    <div class="w-6 h-6 bg-blue-400 rounded" />
                  </div>
                  <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center">
                    <div class="w-6 h-6 bg-red-400 rounded" />
                  </div>
                  <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                    <div class="w-6 h-6 bg-blue-400 rounded" />
                  </div>
                </div>
                <div class="w-full h-32 bg-gray-50 rounded-lg p-4">
                  <div class="flex justify-between items-center mb-4">
                    <div class="w-16 h-4 bg-gray-200 rounded" />
                    <div class="flex gap-2">
                      <div class="w-16 h-6 bg-red-500 rounded-full flex items-center justify-center">
                        <span class="text-white text-xs">LIVE</span>
                      </div>
                      <div class="w-24 h-6 bg-gray-200 rounded-full" />
                    </div>
                  </div>
                  <div class="flex gap-2">
                    {Array.from({ length: 4 }).map((_, i) => (
                      <div class="w-12 h-12 bg-gray-200 rounded-full" />
                    ))}
                  </div>
                </div>
              </div>
            )}

            {benefit.visualType === 'syncPlayback' && (
              <div class="flex items-center gap-8">
                <div class="w-24 flex items-center">
                  <div class="w-16 h-8 bg-blue-100 rounded-lg" />
                  <div class="w-12 h-1 bg-blue-300" />
                </div>
                <div class="flex-1 flex gap-4">
                  <div class="w-48 h-32 bg-gray-50 rounded-lg p-4">
                    <div class="flex items-center gap-2 mb-4">
                      <div class="w-8 h-8 bg-blue-400 rounded-full" />
                      <div class="text-sm text-blue-600">LIVE</div>
                      <div class="text-sm text-gray-500">9:30</div>
                    </div>
                  </div>
                  <div class="w-16 h-32 bg-gray-50 rounded-lg" />
                </div>
              </div>
            )}
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  .benefit-card {
    transition: all 0.3s ease;
  }

  .benefit-card:hover {
    transform: translateY(-2px);
  }
</style>
