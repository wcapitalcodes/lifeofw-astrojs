---
const { benefits } = Astro.props;
---

<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    {
      benefits.map((benefit) => (
        <div class="bg-white rounded-2xl p-8 shadow-sm hover:shadow-md transition-shadow overflow-hidden">
          <h3 class="text-2xl font-bold text-gray-900 mb-2">{benefit.title}</h3>
          <p class="text-gray-500 mb-8">{benefit.description}</p>
          <div class="flex items-center justify-center">
            <img src={benefit.image} alt="" />
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  .benefit-card {
    transition: all 0.3s ease;
  }

  .benefit-card:hover {
    transform: translateY(-2px);
  }
</style>
