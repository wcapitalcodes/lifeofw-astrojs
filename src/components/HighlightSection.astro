---

interface Props {
  title?: {
    line1: string;
    line2: string;
  };
  description?: string;
  primaryCTA?: {
    text: string;
    href: string;
  };
  secondaryCTA?: {
    text: string;
    href: string;
  };
}

const {
  title = {
    line1: "Your Digital Vault for",
    line2: "Financial Empowerment"
  },
  description = "Securely organize and manage your assets, track financial goals, and access powerful tools designed specifically for women's wealth management.",
  primaryCTA = {
    text: "Start your journey",
    href: "#"
  },
  secondaryCTA = {
    text: "Book a demo",
    href: "#"
  }
} = Astro.props;
---

<section class="relative overflow-hidden bg-white">
  <div class="bg-gray-900 rounded-3xl mx-4 sm:mx-8 lg:mx-auto lg:max-w-6xl">
    <div class="relative pt-24 pb-20 px-4 sm:px-6 lg:px-8">
      <!-- Decorative elements -->
      <div class="absolute top-0 left-1/4 -translate-x-1/2">
        <div class="w-48 h-48 bg-gradient-to-br from-purple-500/20 to-blue-500/20 blur-2xl rounded-full"></div>
      </div>
      <div class="absolute bottom-0 right-1/4 translate-x-1/2">
        <div class="w-48 h-48 bg-gradient-to-tr from-blue-500/20 to-purple-500/20 blur-2xl rounded-full"></div>
      </div>

      <!-- Main content -->
      <div class="relative max-w-3xl mx-auto text-center">
        <h1 class="text-4xl sm:text-5xl font-bold text-white mb-6">
          {title.line1}<br />
          {title.line2}
        </h1>
        <p class="text-lg sm:text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          {description}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a
            href={primaryCTA.href}
            class="inline-flex items-center px-6 py-3 rounded-full bg-blue-600 hover:bg-blue-700 text-white font-medium transition-colors"
          >
            {primaryCTA.text}
            <svg class="ml-2 w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
          <a
            href={secondaryCTA.href}
            class="inline-flex items-center px-6 py-3 rounded-full bg-gray-800 hover:bg-gray-700 text-white font-medium transition-colors"
          >
            {secondaryCTA.text}
          </a>
        </div>
      </div>

      <!-- Decorative images -->
      <div class="absolute left-4 top-1/2 -translate-y-1/2">
        <div class="grid grid-cols-2 gap-2">
          <div class="w-16 h-16 rounded-lg bg-gray-800"></div>
          <div class="w-16 h-16 rounded-lg bg-gray-800"></div>
          <div class="w-16 h-16 rounded-lg bg-gray-800"></div>
          <div class="w-16 h-16 rounded-lg bg-gray-800"></div>
        </div>
      </div>
      <div class="absolute right-4 top-1/2 -translate-y-1/2">
        <div class="grid grid-cols-2 gap-2">
          <div class="w-16 h-16 rounded-lg bg-gray-800"></div>
          <div class="w-16 h-16 rounded-lg bg-gray-800"></div>
          <div class="w-16 h-16 rounded-lg bg-gray-800"></div>
          <div class="w-16 h-16 rounded-lg bg-gray-800"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  section {
    background: linear-gradient(to bottom, #f3f4f6 0%, #fff 100%);
    padding: 2rem 0;
  }
</style>