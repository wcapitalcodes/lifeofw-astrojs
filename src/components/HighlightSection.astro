---
import { Icon } from 'astro-icon/components';

interface Props {
  title?: {
    line1: string;
    line2: string;
  };
  description?: string;
  primaryCTA?: {
    text: string;
    href: string;
  };
  secondaryCTA?: {
    text: string;
    href: string;
  };
}

const {
  title = 'Your Digital Vault for Financial Empowerment',
  description = "Securely organize and manage your assets, track financial goals, and access powerful tools designed specifically for women's wealth management.",
  primaryCTA = {
    text: 'Start your journey',
    href: '#',
  },
  secondaryCTA = {
    text: 'Talk to Us',
    href: '#',
  },
} = Astro.props;
---

<section class="relative overflow-hidden">
  <div class="bg-gray-900 rounded-3xl mx-4 sm:mx-8 lg:mx-auto lg:max-w-6xl">
    <div class="relative pt-24 pb-20 px-4 sm:px-6 lg:px-8">
      <!-- Decorative elements -->
      <div class="absolute top-0 left-1/3 -translate-x-1/2">
        <div class="w-48 h-48 bg-gradient-to-br from-primary-500 to-accent-500/20 blur-2xl rounded-full"></div>
      </div>
      <div class="absolute bottom-0 right-1/4 translate-x-1/2">
        <div class="w-48 h-48 bg-gradient-to-tr from-primary-500/20 to-accent-500 blur-2xl rounded-full"></div>
      </div>

      <!-- Main content -->
      <div class="relative max-w-3xl mx-auto text-center">
        <h1 class="text-4xl sm:text-5xl font-medium text-white mb-6 font-serif">
          {title}
        </h1>
        <p class="text-lg sm:text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          {description}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a
            href={primaryCTA.href}
            class="inline-flex items-center px-6 py-3 rounded-full bg-accent-600 hover:bg-accent-700 text-white font-medium transition-colors"
          >
            {primaryCTA.text}
            <Icon
            name="lucide:arrow-up-right"
            class="ml-2 w-5 h-5 group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform"
          />
          </a>
          {
            secondaryCTA && (
              <a
                href={secondaryCTA.href}
                class="inline-flex items-center px-6 py-3 rounded-full bg-gray-800 hover:bg-gray-700 text-white font-medium transition-colors"
              >
                {secondaryCTA.text}
              </a>
            )
          }
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  section {
    background: linear-gradient(to bottom, #f3f4f6 0%, #fff 100%);
    padding: 2rem 0;
  }
</style>
