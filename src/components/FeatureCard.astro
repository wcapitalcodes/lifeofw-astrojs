---
import { Icon } from 'astro-icon/components';

const {
  title = await Astro.slots.render('title'),
  image = await Astro.slots.render('image'),
  icon = await Astro.slots.render('icons'),
  description = await Astro.slots.render('description'),
} = Astro.props;
---

<div class="bg-white rounded-2xl p-8 shadow-sm hover:shadow-md transition-all border border-gray-200">
  <div class="h-36 flex items-center justify-center mb-6">
    <Icon
  name={icon}
  class="w-16 h-16 group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform text-accent-600"
/>
  </div>
  <h3 class="text-xl font-semibold text-center text-gray-900">
    {title}
  </h3>
  {description && <p class="text-sm my-2 text-center">{description}</p>}
</div>
