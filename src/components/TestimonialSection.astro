---
// TestimonialSection.astro
interface Props {
  quote?: string;
  highlightedText?: string;
  conclusion?: string;
  authorName?: string;
  authorTitle?: string;
  authorCompany?: string;
  companyLogo?: string;
}

const {
  //   quote = "I've been using W Vault to manage my finances for the past year. It's an incredible platform that truly understands what women need for financial organization.",
  quote = 'W Vault is more than just a digital vault to house your important documents. In addition to allowing you (and your authorised list of accessors) immediate access to a list of assets and liabilities for handling important life events such as divorce, death or even tax audits, W Vault will provide you a snapshot of your financial life (through the dashboard) of your assets and liabilities. With this information, you can get a good understanding of your financial standing. By inputting information, W Vault serves as a personal life manager for you, securely.',
  authorName = 'Uzzair B.',
  authorTitle = 'Founder',
  authorCompany = 'Uzzair Web Studio',
  companyLogo = '/images/company-logo.png',
} = Astro.props;
---

<section class="bg-gray-50 py-24">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <blockquote class="text-center">
      <p class="text-gray-600 text-lg sm:text-xl">
        {quote}
      </p>
      <footer class="mt-8 flex items-center justify-center gap-4">
        <div class="flex items-center gap-4">
          <div class="h-12 w-12 rounded-full bg-gray-200"></div>
          <div class="text-left">
            <div class="font-medium text-gray-900">{authorName}</div>
            <div class="text-gray-600">{authorTitle}, {authorCompany}</div>
          </div>
        </div>
      </footer>
    </blockquote>
  </div>
</section>

<style>
  blockquote {
    font-feature-settings: 'zero' 1;
  }
</style>
