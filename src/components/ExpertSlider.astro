---
import LinkButton from './ui/LinkButton.astro';

const experts = [
  {
    name: 'Rejina Rahim',
    avatarUrl: 'images/partner-rejina.png',
  },
  {
    name: 'Sherry Sheriff',
    avatarUrl: 'images/partner-sherry.png',
  },
  {
    name: 'Jessica Wee',
    avatarUrl: 'images/partner-jessica.png',
  },
  {
    name: 'Joanna Lopez',
    avatarUrl: 'images/partner-joanne.png',
  },
  {
    name: 'Azreen Pharmy',
    avatarUrl: 'images/partner-azreen.png',
  },
  {
    name: 'Rita Shah',
    avatarUrl: 'images/partner-rita.png',
  },
  {
    name: 'Dr. Khatina',
    avatarUrl: 'images/partner-khatina.png',
  },
  {
    name: 'Jesvin Kaur',
    avatarUrl: 'images/partner-jesvin.png',
  },
  {
    name: 'Jasmine Ng',
    avatarUrl: 'images/partner-jasmine.png',
  },
  {
    name: 'Janet Chai',
    avatarUrl: 'images/partner-janet.png',
  },
];
---

<div class="bg-white my-10">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-5xl lg:text-center">
      <h2 class="text-base font-medium leading-7 text-accent-900 font-sans">Let's connect</h2>
      <p class="mt-2 text-3xl font-medium tracking-tight text-gray-900 sm:text-4xl font-serif">
        Meet Our Network of Experts
      </p>
      <p class="mt-3 text-xl font-base flex items-center justify-center text-gray-500">
        <span>
          Because we know that sometimes its always good to bounce off ideas and get opinion from people in the know,
          our network of experts are here to help you through your journey of life. Get in touch so you can have a chat*
          with them to kickstart your journey towards a future you want.
        </span>
      </p>
    </div>

    <div class="mx-auto mt-16 max-w-7xl sm:my-20 lg:my-24 lg:max-w-7xl overflow-hidden">
      <div class="flex gap-16 group">
        <div class="flex gap-16 animate-loop-scroll group-hover:[animation-play-state:paused] min-w-full">
          {
            experts.map((expert) => (
              <div class="rounded-full bg-gradient-to-r from-primary-500 via-athens-gray-500 to-accent-500 p-1">
                <img
                  class="max-w-[70px] rounded-full bg-gray-100"
                  src={expert.avatarUrl}
                  alt={`${expert.name}'s profile photo`}
                />
              </div>
            ))
          }
          {/* Duplicate for seamless scroll */}
          {
            experts.map((expert) => (
              <div class="rounded-full bg-gradient-to-r from-primary-500 via-athens-gray-500 to-accent-500 p-1">
                <img
                  class="max-w-[70px] rounded-full bg-gray-100"
                  src={expert.avatarUrl}
                  alt={`${expert.name}'s profile photo`}
                />
              </div>
            ))
          }
        </div>
      </div>

      <div class="text-center mt-24">
        <LinkButton link="/wahine_experts" buttonText="Meet Wahine Experts" color="accent" />
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes loop-scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  .animate-loop-scroll {
    animation: loop-scroll 30s linear infinite;
  }
</style>
