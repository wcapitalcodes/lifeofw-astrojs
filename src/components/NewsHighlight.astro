---
import LinkButton from './ui/LinkButton.astro';
import { Icon } from 'astro-icon/components';

const {
  newsTitle = 'Breaking Barriers: Our Journey to UN WEPs Award Recognition in Innovative Financing',
  newsDescription = "We are thrilled to announce our recent achievement at the UN Women's Empowerment Principles (WEPs) Awards, securing second place in the Innovative...",
  newsButtonText = 'Read More',
  newsImagePath = '/images/rejina-sherry-awards.png',
  newsImageAlt = 'UN WEPs Award Recognition',

  communityTitle = 'Join the\nWahine Community',
  communityDescription = "Connect with fellow W Vault users and share your insights, questions, or feedback! Whether you're looking to collaborate, seek support, or simply engage with our vibrant community, we'd love to hear from you. Fill out the form below, and let's build a secure and innovative future together!",
  communityButtonText = 'Register Now',
  communityImagePath = '/images/community-network.jpeg',
  communityImageAlt = 'Wahine Community Members',

  videoTitle = "Explore our Video Series on\nPersonal Finance in Outclass",
  videoButtonText = "Preview",
  videoImagePath = "/images/sherry-video.jpeg",
  videoImageAlt = "Financial Awareness Preview"
} = Astro.props;
---

<div class="mx-auto max-w-5xl px-4 md:px-6 space-y-8 md:space-y-12 mb-16">
  <!-- News Quote Section -->
  <div class="grid grid-cols-1 lg:grid-cols-2 shadow-lg rounded-2xl overflow-hidden">
    <div class="bg-teal-900 text-white p-6 md:p-8 lg:p-12 flex flex-col justify-center order-2 lg:order-1">
      <h1 class="text-xl md:text-2xl font-serif leading-tight mb-4 md:mb-6">{newsTitle}</h1>
      <p class="text-gray-200 mb-6 md:mb-8 text-base">{newsDescription}</p>
      <div class="w-1/2 md:w-auto">
        <LinkButton 
          buttonText={newsButtonText} 
          link="https://www.linkedin.com/posts/wahine-capital_mental-activity-7252218684260114433-fiMb?utm_source=share&utm_medium=member_desktop" 
          target="_blank" 
        />
      </div>
    </div>
    <div class="relative h-48 md:h-64 lg:h-full order-1 lg:order-2">
      <img 
        src={newsImagePath} 
        alt={newsImageAlt} 
        class="object-cover absolute inset-0 w-full h-full object-center" 
      />
    </div>
  </div>

  <!-- Community Join Section -->
  <div class="relative rounded-2xl overflow-hidden">
    <div class="absolute inset-0">
      <img 
        src={communityImagePath} 
        alt={communityImageAlt} 
        class="absolute inset-0 w-full h-full object-cover brightness-75" 
      />
      <div class="absolute inset-0 bg-gradient-to-r from-black/60 to-black/40"></div>
    </div>
    <div class="relative min-h-[400px] md:min-h-[500px] flex items-center">
      <div class="w-full px-6 md:px-12 py-12 md:py-16">
        <div class="max-w-3xl">
          <h1 class="text-2xl md:text-3xl lg:text-4xl font-serif text-white mb-4 md:mb-6 leading-tight">
            {communityTitle.split('\n').map((line, i) => 
              i === 0 ? line : <><br class="hidden md:block" /><span class="md:hidden"> </span>{line}</>
            )}
          </h1>
          <p class="text-base md:text-lg mb-6 md:mb-8 leading-relaxed text-gray-100">
            {communityDescription}
          </p>
          <LinkButton buttonText={communityButtonText} link="/community" target="_blank" />
        </div>
      </div>
    </div>
  </div>

  <!-- Video Series Preview Section -->
  <div class="relative rounded-2xl overflow-hidden">
    <div class="absolute inset-0">
      <img 
        src={videoImagePath} 
        alt={videoImageAlt} 
        class="absolute inset-0 w-full h-full object-cover brightness-75" 
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/30 to-transparent"></div>
    </div>
    <div class="relative min-h-[300px] md:min-h-[400px]">
      <div class="absolute inset-0 flex items-center">
        <div class="w-full px-6 md:px-12 py-12 md:py-16">
          <h1 class="text-2xl md:text-3xl lg:text-4xl font-serif text-white mb-6 md:mb-8 leading-tight max-w-3xl">
            {videoTitle.split('\n').map((line, i) => 
              i === 0 ? line : <><br class="hidden md:block" /><span class="md:hidden"> </span>{line}</>
            )}
          </h1>
          <a 
            href="/outclass" 
            class="inline-flex items-center bg-lime-300 text-teal-900 px-6 py-3 rounded-full hover:bg-lime-400 transition-all duration-300 hover:shadow-lg group"
          >
            <span class="font-medium">{videoButtonText}</span>
            <Icon 
              name="lucide:arrow-up-right" 
              class="ml-2 w-5 h-5 group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform duration-300" 
            />
          </a>
        </div>
      </div>
    </div>
  </div>
</div>