---
// Import necessary components
import LinkButton from './ui/LinkButton.astro';
import { Icon } from 'astro-icon/components';

// Define props for the combined component
const {
  newsTitle = 'Breaking Barriers: Our Journey to UN WEPs Award Recognition in Innovative Financing',
  newsDescription = "We are thrilled to announce our recent achievement at the UN Women's Empowerment Principles (WEPs) Awards, securing second place in the Innovative...",
  newsButtonText = 'Read More',
  newsImagePath = '/images/rejina-sherry-awards.png',
  newsImageAlt = 'UN WEPs Award Recognition',

  communityTitle = 'Join the\nWahine Community',
  communityDescription = "Connect with fellow W Vault users and share your insights, questions, or feedback! Whether you're looking to collaborate, seek support, or simply engage with our vibrant community, we'd love to hear from you. Fill out the form below, and let's build a secure and innovative future together!",
  communityButtonText = 'Register Now',
  communityImagePath = '/images/community-network.jpeg',
  communityImageAlt = 'Wahine Community Members',

  videoTitle = "Explore our Video Series on\nPersonal Finance in Outclass",
  videoButtonText = "Preview",
  videoImagePath = "/images/sherry-video.jpeg",
  videoImageAlt = "Financial Awareness Preview"
} = Astro.props;
---

<div class="mx-auto max-w-5xl mb-10 md:mb-4">
  <!-- News Quote Section -->
  <div class="grid grid-cols-1 lg:grid-cols-2 mb-10">
    <div class="bg-teal-900 text-white p-8 lg:p-12 flex flex-col justify-center">
      <h1 class="text-lg lg:text-xl font-serif leading-tight mb-6">{newsTitle}</h1>
      <p class="text-gray-200 mb-8 text-md">{newsDescription}</p>
      <div class="w-auto"> <!-- Added a wrapper with specific width -->
        <LinkButton buttonText={newsButtonText} link="https://www.linkedin.com/posts/wahine-capital_mental-activity-7252218684260114433-fiMb?utm_source=share&utm_medium=member_desktop" target="_blank" />
      </div>
    </div>
    <div class="relative h-full min-h-[200px] lg:min-h-[300px]">
      <img src={newsImagePath} alt={newsImageAlt} class="object-cover absolute inset-0 w-full h-full" />
    </div>
  </div>

  <!-- Community Join Section -->
  <div class="relative w-full lg:h-[400px] mb-10">
    <div class="absolute inset-0">
      <img src={communityImagePath} alt={communityImageAlt} class="absolute inset-0 w-full h-full object-cover brightness-75" />
      <div class="absolute inset-0 bg-black/20"></div>
    </div>
    <div class="relative h-full flex items-center">
      <div class="container mx-auto px-4 max-w-4xl">
        <h1 class="text-3xl font-serif text-white mb-6 leading-tight">
          {communityTitle.split('\n').map((line, i) => i === 0 ? line : <><br />{line}</>)}
        </h1>
        <p class="text-lg mb-8 leading-relaxed max-w-3xl text-gray-100">{communityDescription}</p>
        <LinkButton buttonText={communityButtonText} link="/community" target="_blank" />
      </div>
    </div>
  </div>

  <!-- Video Series Preview Section -->
  <div class="relative w-full lg:h-[400px]">
    <div class="absolute inset-0">
      <img src={videoImagePath} alt={videoImageAlt} class="absolute inset-0 w-full h-full object-cover brightness-75" />
    </div>
    <div class="relative h-full">
      <div class="absolute inset-0 flex items-center p-16">
        <div class="container mx-auto px-6">
          <h1 class="text-3xl font-serif text-white mb-8 leading-tight">
            {videoTitle.split('\n').map((line, i) => i === 0 ? line : <><br />{line}</>)}
          </h1>
          <a href="/outclass" class="inline-flex items-center bg-lime-300 text-teal-900 px-6 py-3 rounded-full hover:bg-lime-400 transition-colors group">
            <span class="font-medium">{videoButtonText}</span>
            <Icon name="lucide:arrow-up-right" class="ml-2 w-5 h-5 group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform" />
          </a>
        </div>
      </div>
    </div>
  </div>
</div>