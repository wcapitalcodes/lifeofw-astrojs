---
interface Props {
  imageUrl?: string;
  description?: string;
  name?: string;
  position?: string;
}

const { imageUrl, description, name, position } = Astro.props;
---

<div class="flex flex-col items-center border border-accent-200 shadow-md shadow-accent-200 rounded-lg p-6 md:p-8 lg:p-10 md:border-none md:shadow-none">
  {/* Image - Visible on all screen sizes */}
  <div class="w-full flex justify-center mb-6 md:mb-8">
    <div class="rounded-full bg-gradient-to-r from-primary-500 via-athens-gray-500 to-accent-500 p-1">
      <img 
        class="rounded-full w-48 md:w-56 lg:w-80 aspect-square object-cover" 
        src={imageUrl} 
        alt={`${name}'s profile picture`}
        loading="lazy"
      />
    </div>
  </div>

  <div class="text-center md:text-left w-full">
    <blockquote class="space-y-4">
      <div class="relative">
        <p class="text-lg md:text-xl lg:text-2xl font-medium font-sans text-gray-800 leading-relaxed">
          {description}
        </p>
      </div>
      <footer class="mt-4 md:mt-6">
        <div>
          <div class="text-xl md:text-2xl font-semibold text-gray-800">{name}</div>
          <div class="text-sm md:text-base text-gray-500">{position}</div>
        </div>
      </footer>
    </blockquote>
  </div>
</div>